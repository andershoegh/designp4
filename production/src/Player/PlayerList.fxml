<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane styleClass="window" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Player.Controller.PlayerListController">
    <children>
        <HBox styleClass="menubar" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane />
            </children>
        </HBox>
        <BorderPane prefHeight="800.0" prefWidth="1209.0">
            <top>
                <HBox prefHeight="59.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="49.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../graphics/aaif.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="15.0" top="15.0" />
                            </HBox.margin>
                        </ImageView>
                        <Label styleClass="teamname" text="AAIF Senior">
                            <HBox.margin>
                                <Insets left="20.0" top="30.0" />
                            </HBox.margin>
                        </Label>
                        <Region minWidth="87.0" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="pageheadline" text="Spillere">
                            <HBox.margin>
                                <Insets top="25.0" />
                            </HBox.margin>
                        </Text>
                    </children>
                </HBox>
            </top>
            <left>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <Button alignment="CENTER" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Oversigt">
                            <VBox.margin>
                                <Insets top="45.0" />
                            </VBox.margin>
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="55.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Kalender">
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="100.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" styleClass="selectedmenu" text="Spillere">
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="145.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Kampe">
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="190.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Træning">
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="235.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Statistik">
                        </Button>
                        <Button alignment="CENTER" layoutX="10.0" layoutY="280.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" text="Diverse">
                        </Button>
                    </children>
                </VBox>
            </left>
            <center>
                <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Region prefHeight="60.0" prefWidth="200.0" />
                  <TableView fx:id="tablePlayers">
                    <columns>
                      <TableColumn fx:id="columnName" prefWidth="75.0" text="Navn" />
                      <TableColumn fx:id="columnPosition" prefWidth="75.0" text="Position" />
                        <TableColumn fx:id="columnEdit" prefWidth="75.0" text="Column X" />
                    </columns>
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TableView>
                  <Region prefHeight="20.0" prefWidth="200.0" />
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button alignment="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#addPlayerButtonClick" styleClass="buttonApprove" text="Tilføj spiller">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button minWidth="126.0" mnemonicParsing="false" onAction="#deletePlayerButtonClick" styleClass="buttonCancel" text="Slet valgt spiller">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
